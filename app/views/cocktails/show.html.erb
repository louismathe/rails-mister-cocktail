<h2><%= @cocktail.name %></h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <% if dose.persisted? %>
      <li>
        <%= dose.description %> <%= dose.ingredient.name %>
        <%= link_to "x", dose_path(dose), method: :delete %>
      </li>
    <% end %>
  <% end %>
</ul>

<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>

<%= render "doses/form" %>

<%= link_to "Delete", cocktail_path(@cocktail),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
